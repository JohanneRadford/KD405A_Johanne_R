import java.util.ArrayList;
import java.util.Iterator;

public class bikeStore1 {
/** Alla affärens cyklar */
private static ArrayList<Bike> addBikes = new ArrayList<Bike>();
/** Returnerar info om alla cyklar som en sträng */
public String getAllBikes() {
String returnString = "";
for (int i = 0; i < addBikes.size(); i ++) {
returnString += ("bike " + (i + 1) + " är storlek " + addBikes.get(i).getSize() + " och är färgen " + addBikes.get(i).getColor() + " och kostar " + addBikes.get(i).getPrice() + "\n"); 
}
 return returnString;
}
/** Lägg till en ny cykel i affären */
public static void addBike(String color, int size, int price) {
addBikes.add(new Bike(color, size, price));
}
}
		
